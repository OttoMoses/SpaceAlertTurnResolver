<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.otto.spacealertresolver">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activities.SettingsScreen" />
        <activity android:name=".Activities.GameSetup" />
        <activity android:name=".Activities.PlayersList" />
        <activity android:name=".Activities.ResultsScreen" />
        <activity android:name=".Activities.PlayerDetail" />
        <activity android:name=".Activities.ActionDetail" />
        <activity android:name=".Activities.ThreatTrackEdit" />
        <activity android:name=".Activities.ThreatsList" />
        <activity android:name=".Activities.ThreatDetail" />
    </application>

</manifest>